	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>

		<g:Label>This is basic html file.</g:Label>
		<g:Button styleName="{style.important}" ui:field="button"
			text="Click me" />

		<g:VerticalPanel>

			<g:HorizontalPanel>

             <g:Label> It is working</g:Label>

			</g:HorizontalPanel>
		</g:VerticalPanel>

	</g:HTMLPanel>

